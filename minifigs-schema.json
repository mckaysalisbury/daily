{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "properties": {
      "data": {
        "type": "array",
        "required": ["id", "name", "keywords", "dates"],
        "items": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "style": {
                    "type": "string",
                    "enum": ["minifig", "giant", "item", "character", "microfigure", "nanofigure"]
                },
                "image": {
                    "type":"string"
                },
                "keywords": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "actor": {
                    "type": "string"
                },
                "set": {
                    "type": "integer"
                },
                "item": {
                    "type": "string"
                },
                "part": {
                    "type": "string"
                },
                "notes": {
                    "type": "string"
                },
                "rpg": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["campaign", "player", "character"],
                        "properties": {
                            "campaign": {
                                "type": "string",
                                "enum": ["Tyranny of Dragons", "Dragon of Icespire Peak", "Lost Mine of Phandelver - Family", "Lost Mine of Phandelver - Dave"]
                            },
                            "player": {
                                "type": "string"
                            },
                            "character": {
                                "type": "string"
                            },
                            "nickname": {
                                "type": "string"
                            }
                        }
                    }
                },
                "dates": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "description": "a Minifig",
            "markdownDescription": "a [Minifig](https://en.wikipedia.org/wiki/Lego_minifigure)"
        }
      }
    }
  }
